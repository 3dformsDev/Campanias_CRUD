@model IEnumerable<CampaniasCRUD_NET9.Models.Campanias>

@{
    ViewData["Title"] = "Listado de campañas";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-dark text-white">
        <h6 class="m-0 font-weight-bold">Campañas activas</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Nueva campaña
        </a>
    </div>
    <div class="card-body bg-dark text-white">
        <form asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="busqueda" value="@Context.Request.Query["busqueda"]" class="form-control bg-light" placeholder="Buscar por nombre..." />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-secondary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-dark table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Campaña</th>
                        <th>Tipo</th>
                        <th>Lista POM</th>
                        <th>Campaña POM</th>
                        <th>Skill Secundario</th>
                        <th style="width: 180px">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Campania</td>
                            <td>@item.Tipo</td>
                            <td>@item.ListaPOM</td>
                            <td>@item.CampaniaPOM</td>
                            <td>@item.SkillSecundario</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-1"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mr-1"><i class="fas fa-eye"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
