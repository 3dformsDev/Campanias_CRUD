@model CampaniasCRUD_NET9.Models.Campanias

@{
    ViewData["Title"] = "Eliminar Campaña";
}

<div class="container mt-4">
    <h2 class="text-center text-danger mb-4">¿Estás seguro de eliminar esta campaña?</h2>

    <div class="card bg-dark text-white shadow p-4 rounded">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Campaña</label>
                    <p class="form-control bg-dark text-white">@Model.Campania</p>

                    <label class="form-label">Campaña POM</label>
                    <p class="form-control bg-dark text-white">@Model.CampaniaPOM</p>

                    <label class="form-label">Lista POM</label>
                    <p class="form-control bg-dark text-white">@Model.ListaPOM</p>

                    <label class="form-label">Tenant</label>
                    <p class="form-control bg-dark text-white">@Model.Tenant</p>

                    <label class="form-label">Operación</label>
                    <p class="form-control bg-dark text-white">@Model.Operacion</p>

                    <label class="form-label">Tipo</label>
                    <p class="form-control bg-dark text-white">@Model.Tipo</p>

                    <label class="form-label">ANI</label>
                    <p class="form-control bg-dark text-white">@((Model.ANI == true) ? "Sí" : "No")</p>

                    <label class="form-label">DNIS</label>
                    <p class="form-control bg-dark text-white">@((Model.DNIS == true) ? "Sí" : "No")</p>

                    <label class="form-label">Skill</label>
                    <p class="form-control bg-dark text-white">@((Model.Skill == true) ? "Sí" : "No")</p>

                    <label class="form-label">VDN</label>
                    <p class="form-control bg-dark text-white">@((Model.VDN == true) ? "Sí" : "No")</p>

                    <label class="form-label">Extensión</label>
                    <p class="form-control bg-dark text-white">@((Model.Extension == true) ? "Sí" : "No")</p>

                    <label class="form-label">Agente</label>
                    <p class="form-control bg-dark text-white">@((Model.Agente == true) ? "Sí" : "No")</p>

                    <label class="form-label">UCID</label>
                    <p class="form-control bg-dark text-white">@((Model.UCID == true) ? "Sí" : "No")</p>

                    <label class="form-label">UUI</label>
                    <p class="form-control bg-dark text-white">@((Model.UUI == true) ? "Sí" : "No")</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Guión</label>
                    <p class="form-control bg-dark text-white">@((Model.Guion == true) ? "Sí" : "No")</p>

                    <label class="form-label">Observaciones</label>
                    <p class="form-control bg-dark text-white">@((Model.Observaciones == true) ? "Sí" : "No")</p>

                    <label class="form-label">Cliente</label>
                    <p class="form-control bg-dark text-white">@((Model.Cliente == true) ? "Sí" : "No")</p>

                    <label class="form-label">Tipificación</label>
                    <p class="form-control bg-dark text-white">@((Model.Tipificacion == true) ? "Sí" : "No")</p>

                    <label class="form-label">CTI</label>
                    <p class="form-control bg-dark text-white">@((Model.CTI == true) ? "Sí" : "No")</p>

                    <label class="form-label">Histórico</label>
                    <p class="form-control bg-dark text-white">@Model.Historico</p>

                    <label class="form-label">Etiqueta WFO</label>
                    <p class="form-control bg-dark text-white">@((Model.EtiquetaWFO == true) ? "Sí" : "No")</p>

                    <label class="form-label">Cierre POM</label>
                    <p class="form-control bg-dark text-white">@((Model.CierrePOM == true) ? "Sí" : "No")</p>

                    <label class="form-label">Actualiza POM</label>
                    <p class="form-control bg-dark text-white">@((Model.ActualizaPOM == true) ? "Sí" : "No")</p>

                    <label class="form-label">Habilitado</label>
                    <p class="form-control bg-dark text-white">@((Model.Habilitado) ? "Sí" : "No")</p>

                    <label class="form-label">ACW Time</label>
                    <p class="form-control bg-dark text-white">@Model.ACWTime</p>

                    <label class="form-label">Skill Principal</label>
                    <p class="form-control bg-dark text-white">@Model.SkillPrincipal</p>

                    <label class="form-label">Skill Secundario</label>
                    <p class="form-control bg-dark text-white">@Model.SkillSecundario</p>

                    <label class="form-label">Texto Guión</label>
                    <button type="button" class="btn btn-outline-info form-control" data-bs-toggle="modal" data-bs-target="#modalTextoGuion">
                        Ver Guión
                    </button>

                    <label class="form-label mt-3">Colección</label>
                    <p class="form-control bg-dark text-white">@Model.Coleccion</p>

                    <label class="form-label">Campo ID</label>
                    <p class="form-control bg-dark text-white">@Model.CampoId</p>

                    <label class="form-label">Campo Teléfono</label>
                    <p class="form-control bg-dark text-white">@Model.CampoTelefono</p>

                    <label class="form-label">Campaign POM ID</label>
                    <p class="form-control bg-dark text-white">@Model.CampaignPOMID</p>

                    <label class="form-label">Contact List ID</label>
                    <p class="form-control bg-dark text-white">@Model.ContactListID</p>

                    <label class="form-label">Strategy ID</label>
                    <p class="form-control bg-dark text-white">@Model.StrategyID</p>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                <a href="@Url.Action("Index", "Campanias")" class="btn btn-secondary ml-2">
                    <i class="fas fa-arrow-left"></i> Volver al listado
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Modal Texto Guion -->
<div class="modal fade" id="modalTextoGuion" tabindex="-1" aria-labelledby="modalTextoGuionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTextoGuionLabel">Texto del Guión</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <pre class="text-white" style="white-space: pre-wrap;">@Model.TextoGuion</pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
