@model CampaniasCRUD_NET9.Models.Campanias

@{
    ViewData["Title"] = "Editar campaña";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-dark">
        <h5 class="m-0 text-white">Editar campaña: <strong class="bg-secondary px-2 rounded">@Model.Campania</strong></h5>
    </div>

    <div class="card-body bg-dark text-white">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Campania"></label>
                    <input asp-for="Campania" class="form-control" />
                    <span asp-validation-for="Campania" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CampaniaPOM"></label>
                    <input asp-for="CampaniaPOM" class="form-control" />
                    <span asp-validation-for="CampaniaPOM" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ListaPOM"></label>
                    <input asp-for="ListaPOM" class="form-control" />
                    <span asp-validation-for="ListaPOM" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Tenant"></label>
                    <input asp-for="Tenant" class="form-control" />
                    <span asp-validation-for="Tenant" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Operacion"></label>
                    <input asp-for="Operacion" class="form-control" />
                    <span asp-validation-for="Operacion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Tipo"></label>
                    <input asp-for="Tipo" class="form-control" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <!-- Campos booleanos -->
                @foreach (var field in new[] { "ANI", "DNIS", "Skill", "VDN", "Extension", "Agente", "UCID", "UUI", "Guion", "Observaciones", "Cliente", "Tipificacion", "CTI", "EtiquetaWFO", "CierrePOM", "ActualizaPOM", "Habilitado" })
                {
                    <div class="form-group col-md-6">
                        <div class="form-check">
                            <input asp-for="@field" class="form-check-input" />
                            <label class="form-check-label" asp-for="@field">@field</label>
                        </div>
                        <span asp-validation-for="@field" class="text-danger"></span>
                    </div>
                }

                <div class="form-group col-md-6">
                    <label asp-for="Historico"></label>
                    <input asp-for="Historico" class="form-control" />
                    <span asp-validation-for="Historico" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ACWTime"></label>
                    <input asp-for="ACWTime" class="form-control" />
                    <span asp-validation-for="ACWTime" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="SkillPrincipal"></label>
                    <input asp-for="SkillPrincipal" class="form-control" />
                    <span asp-validation-for="SkillPrincipal" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="SkillSecundario"></label>
                    <input asp-for="SkillSecundario" class="form-control" />
                    <span asp-validation-for="SkillSecundario" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="TextoGuion"></label>
                    <textarea asp-for="TextoGuion" class="form-control"></textarea>
                    <span asp-validation-for="TextoGuion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Coleccion"></label>
                    <input asp-for="Coleccion" class="form-control" />
                    <span asp-validation-for="Coleccion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CampoId"></label>
                    <input asp-for="CampoId" class="form-control" />
                    <span asp-validation-for="CampoId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CampoTelefono"></label>
                    <input asp-for="CampoTelefono" class="form-control" />
                    <span asp-validation-for="CampoTelefono" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CampaignPOMID"></label>
                    <input asp-for="CampaignPOMID" class="form-control" />
                    <span asp-validation-for="CampaignPOMID" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ContactListID"></label>
                    <input asp-for="ContactListID" class="form-control" />
                    <span asp-validation-for="ContactListID" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="StrategyID"></label>
                    <input asp-for="StrategyID" class="form-control" />
                    <span asp-validation-for="StrategyID" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <button type="button" class="btn btn-secondary mr-2" onclick="window.location.href='@Url.Action("Index", "Campanias")'">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-success" id="confirmarGuardar">
                    <i class="fas fa-save"></i> Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#confirmarGuardar').on('click', function () {
                Swal.fire({
                    title: '¿Guardar cambios?',
                    text: "Esta acción actualizará la campaña en la base de datos.",
                    icon: 'warning',
                    background: '#343a40',
                    color: '#fff',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, guardar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $('form').submit();
                    }
                });
            });
        });
    </script>
}
