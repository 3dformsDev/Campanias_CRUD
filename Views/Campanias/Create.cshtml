@model CampaniasCRUD_NET9.Models.Campanias

@{
    ViewData["Title"] = "Crear campaña";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-dark">
        <h5 class="m-0 text-white">Editar campaña: <strong class="bg-secondary px-2 rounded">@Model.Campania</strong></h5>
    </div>

    <div class="card-body bg-dark text-white">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <div class="row">
                @foreach (var prop in typeof(CampaniasCRUD_NET9.Models.Campanias).GetProperties())
                {
                    if (prop.Name != "Id")
                    {
                        var display = prop.GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)
                        .Cast<System.ComponentModel.DataAnnotations.DisplayAttribute>()
                        .FirstOrDefault()?.Name ?? prop.Name;

                        <div class="form-group col-md-6">
                            <label asp-for="@prop.Name">@display</label>

                            @if (prop.PropertyType == typeof(bool) || prop.PropertyType == typeof(bool?))
                            {
                                <div class="form-check">
                                    <input asp-for="@prop.Name" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" for="@prop.Name">@display</label>
                                </div>
                            }
                            else
                            {
                                <input asp-for="@prop.Name" class="form-control" />
                            }

                            <span asp-validation-for="@prop.Name" class="text-danger"></span>
                        </div>
                    }
                }
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <button type="button" class="btn btn-secondary mr-2" onclick="window.location.href='@Url.Action("Index", "Campanias")'">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="button" class="btn btn-success" id="confirmarGuardar">
                    <i class="fas fa-save"></i> Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#confirmarGuardar').on('click', function () {
                Swal.fire({
                    title: '¿Guardar cambios?',
                    text: "Esta acción actualizará la campaña en la base de datos.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, guardar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $('form').submit();
                    }
                });
            });
        });
    </script>
}

