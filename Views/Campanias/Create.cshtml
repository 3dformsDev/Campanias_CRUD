@model CampaniasCRUD_NET9.Models.Campanias

@{
    ViewData["Title"] = "Crear Campaña";
}

<h1 class="text-light">Crear Campaña</h1>

<hr />

<div class="card bg-dark text-white shadow mb-4">
    <div class="card-body">
        <form asp-action="Create">
            <div class="row">
                <!-- Campo Campaña -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Campaña</label>
                    <input asp-for="Campania" class="form-control" />
                </div>

                <!-- CampañaPOM -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Campaña POM</label>
                    <input asp-for="CampaniaPOM" class="form-control" />
                </div>

                <!-- ListaPOM -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Lista POM</label>
                    <input asp-for="ListaPOM" class="form-control" />
                </div>

                <!-- Tenant -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Tenant</label>
                    <input asp-for="Tenant" class="form-control" />
                </div>

                <!-- Operacion -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Operación</label>
                    <input asp-for="Operacion" class="form-control" />
                </div>

                <!-- Tipo -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Tipo</label>
                    <input asp-for="Tipo" class="form-control" />
                </div>

                <!-- Histórico -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Histórico</label>
                    <input asp-for="Historico" class="form-control" />
                </div>

                <!-- ACW Time -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">ACW Time</label>
                    <input asp-for="ACWTime" class="form-control" />
                </div>

                <!-- Skill Principal -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Skill Principal</label>
                    <input asp-for="SkillPrincipal" class="form-control" />
                </div>

                <!-- Skill Secundario -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Skill Secundario</label>
                    <input asp-for="SkillSecundario" class="form-control" />
                </div>

                <!-- Texto Guión -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Texto Guión</label>
                    <input asp-for="TextoGuion" class="form-control" />
                </div>

                <!-- Colección -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Colección</label>
                    <input asp-for="Coleccion" class="form-control" />
                </div>

                <!-- Campo ID -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Campo ID</label>
                    <input asp-for="CampoId" class="form-control" />
                </div>

                <!-- Campo Teléfono -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Campo Teléfono</label>
                    <input asp-for="CampoTelefono" class="form-control" />
                </div>

                <!-- Campaign POM ID -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Campaign POM ID</label>
                    <input asp-for="CampaignPOMID" class="form-control" />
                </div>

                <!-- Contact List ID -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Contact List ID</label>
                    <input asp-for="ContactListID" class="form-control" />
                </div>

                <!-- Strategy ID -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Strategy ID</label>
                    <input asp-for="StrategyID" class="form-control" />
                </div>
            </div>

            <!-- Checkbox booleans -->
            <hr />
            <h5 class="text-light mt-4">Parámetros booleanos</h5>

            <div class="row">
                @* Lista de campos booleanos *@
                @{
                    var booleanFields = new[] {
                "ANI", "DNIS", "Skill", "VDN", "Extension", "Agente", "UCID", "UUI",
                "Guion", "Observaciones", "Cliente", "Tipificacion", "CTI",
                "EtiquetaWFO", "CierrePOM", "ActualizaPOM", "Habilitado"
                };
                }

                @foreach (var field in booleanFields)
                {
                    <div class="col-md-4 mb-3">
                        <div class="form-check form-switch">
                            @Html.CheckBox(field, false, new { @class = "form-check-input", id = field })
                            <label class="form-check-label text-light" for="@field">
                                @Html.DisplayName(field)
                            </label>
                        </div>
                    </div>
                }
            </div>

            <!-- Botones -->
            <div class="form-group mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    Cancelar
                </a>

                <button type="submit" class="btn btn-success" onclick="return confirm('¿Estás seguro de crear esta campaña?')">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>


