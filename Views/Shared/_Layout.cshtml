@using Microsoft.AspNetCore.Mvc.Rendering

@{
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var mostrarSidebar = action == "Index" && controller == "Campanias";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Campañas CRUD</title>

    <!-- SB Admin 2 CSS -->
    <link href="~/sbadmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/sbadmin/css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #343a40; /* Modo oscuro */
            color: white;
        }
    </style>
</head>
<body id="page-top" class="bg-dark">

    <!-- Page Wrapper -->
    <div id="wrapper">

        @* Sidebar solo en Campanias/Index *@
        @if (mostrarSidebar)
        {
            <!-- Sidebar -->
            <ul class="navbar-nav bg-dark sidebar sidebar-dark accordion" id="accordionSidebar">

                <!-- Encabezado del Sidebar -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                    <div class="sidebar-brand-text mx-3">CAMPAÑAS CRUD</div>
                </a>

                <hr class="sidebar-divider my-0" />

                <!-- Opción Campañas -->
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Campanias" asp-action="Index">
                        <i class="fas fa-fw fa-bullhorn"></i>
                        <span>Campañas</span>
                    </a>
                </li>

                <hr class="sidebar-divider" />

                <!-- Título decorativo -->
                <div class="sidebar-heading text-white-50">
                    Otras Secciones
                </div>

                <!-- Opciones visuales -->
                <li class="nav-item">
                    <a class="nav-link disabled text-white-50" href="#">
                        <i class="fas fa-fw fa-cogs"></i>
                        <span>Operaciones</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link disabled text-white-50" href="#">
                        <i class="fas fa-fw fa-building"></i>
                        <span>Tenants</span>
                    </a>
                </li>

            </ul>
        }

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-dark bg-dark topbar mb-4 static-top shadow">
                    <span class="text-white">PBSGroup</span>
                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-dark">
                <div class="container my-auto text-center">
                    <span class="text-white">&copy; 2025 PBSGroup</span>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Scripts -->
    <script src="~/sbadmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/sbadmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/sbadmin/js/sb-admin-2.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
